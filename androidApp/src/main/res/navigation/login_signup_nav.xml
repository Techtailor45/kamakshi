    android:id="@+id/login_signup_nav"
    app:startDestination="@id/userTypeSelectionFragment">

    <fragment
        android:id="@+id/userTypeSelectionFragment"
        android:name="com.example.tecktailor.android.loginregisterauth.UserTypeSelectionFragment"
        android:label="UserTypeSelectionFragment">

        <action
